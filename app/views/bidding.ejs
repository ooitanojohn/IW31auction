<%- include('partials/loginheader.ejs'); %>
<link rel="stylesheet" href="/css/bidding.css" />
<main>
  <%- include('partials/breadcrumb.ejs'); %>
  <div class="uk-flex" style="justify-content:space-between">
    <h2 class="biddingH2">
      オークションNo<%= ejsRender.params.productId %> <%= ejsRender.sql[0].car_name %>の入札開催中
    </h2>
    <h3 class="biddingH3">入札終了まで残り時間<span class="timeLeft"></span></h3>
  </div>
  <div class="uk-container ">
    <!-- 商品画像 -->
    <div class="uk-flex">
      <div style="width:800px;height:400px">
        <div class="uk-position-relative" uk-slideshow="animation: fade">
          <ul class="uk-slideshow-items">
            <li>
              <img src="https://www.suzuki.co.jp/car/ignis/styling/img/img08.jpg" alt="" uk-cover />
            </li>
            <li>
              <img src="https://www.suzuki.co.jp/car/ignis/styling/img/img10.jpg" alt="" uk-cover />
            </li>
            <li>
              <img src="https://www.suzuki.co.jp/car/ignis/styling/img/img09.jpg" alt="" uk-cover />
            </li>
          </ul>
          <div class="uk-position-bottom-center uk-position-small">
            <ul class="uk-thumbnav">
              <li uk-slideshow-item="0">
                <a href="#"
                  ><img
                    src="https://www.suzuki.co.jp/car/ignis/styling/img/img08.jpg"
                    width="60"
                    height="60"
                    alt=""
                /></a>
              </li>
              <li uk-slideshow-item="1">
                <a href="#"
                  ><img
                    src="https://www.suzuki.co.jp/car/ignis/styling/img/img10.jpg"
                    width="60"
                    height="60"
                    alt=""
                /></a>
              </li>
              <li uk-slideshow-item="2">
                <a href="#"
                  ><img
                    src="https://www.suzuki.co.jp/car/ignis/styling/img/img09.jpg"
                    width="60"
                    height="60"
                    alt=""
                /></a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <ul id="biddingLog" style="width: 270px; height: 400px;">
        <li>
          <h4 class="biddngH4">入札履歴</h4>
        </li>
        <% ejsRender.sql.forEach((value, key) => { %>
        <li>
          <p class="biddingP">
            入札No:<span id="biddingLogId"><%- key + 1 %></span> 入札価格:<%= value.bidding_money
            %>万円<span style="display: block;"
              >入札者番号:<%= value.user_id %>入札時間:<%- value.bidding_time %></span
            >
          </p>
        </li>
        <% }) %>
      </ul>
    </div>
    <a href="/product/<%= ejsRender.params.productId %>">商品詳細はこちら</a>
    <!-- 最高価格 -->
    <h3>
      現在最高価格<span id="maxBiddingMoney"> <%=ejsRender.max[0]['MAX(bidding_money)'] %></span
      >万円 <span id="maxUserId"><%= ejsRender.max[0].user_id %></span>番様
      <span id="maxBiddingTime"><%- ejsRender.max[0]['MAX(bidding_time)']%></span>分前に入札です。
    </h3>
    <div style="display: flex; gap:10px;">
      <form id="biddingForm">
        <input id="userId" type="hidden" value="<%= ejsRender.user.user_id %>" />
        <input
          id="biddingMoney"
          type="number"
          min="<%- ejsRender.max[0]['MAX(bidding_money)'] + 100 %>"
          step="10"
          placeholder="<%= ejsRender.max[0]['MAX(bidding_money)'] + 100 %>から振込めます"
          required
        />
      </form>
      <form id="biddingFormBtn" style="display: flex; gap:10px;">
        <input id="userId" type="hidden" value="<%= ejsRender.user.user_id %>" />
        <input
          id="biddingMoneyBtn"
          type="hidden"
          value="<%= ejsRender.max[0]['MAX(bidding_money)'] %>"
        />
        <input type="submit" class="button" id="1" value="+1万円" />
        <input type="submit" class="button" id="10" value="+10万円" />
        <input type="submit" class="button" id="100" value="+100万円" />
        <input type="submit" class="button" id="1000" value="+1000万円" />
      </form>
    </div>
  </div>
</main>
