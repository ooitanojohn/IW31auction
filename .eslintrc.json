{
  "root": true,
  // ルールの追加やルールのオプションの拡張
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "prettier"
  ],
  // サードパーティのルールを指定
  // 追加パッケージが必要
  "plugins": [],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {},
  "rules": {
    "semi": [
      2,
      "always"
    ]
  },
  "ignorePatterns": [
    "temp/",
    "public/js"
  ]
}